
@model notatka.Controllers.AddNoteModel

@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h1>Dodaj notatkę</h1>

@if ((ViewBag.Error != null))
{
<div class="alert-danger">@ViewBag.Error</div>
}

<form method="post">
    <div class="form-group">
        <label for="title">Tytuł</label>
        @*<input type="text" class="form-control" id="title" placeholder="Podaj tytuł notatki"/>*@
        @Html.TextBoxFor(m=>m.Title, new { @class="form-control", placeholder="Podaj tytuł notatki"})
    </div>

    <div class="form-group">
        <label for="content">Treść</label>
        @*<textarea  class="form-control" id="content" placeholder="Podaj treść notatki"></textarea>*@
        @Html.TextAreaFor(m=>m.Content, new { @class = "form-control", placeholder = "Podaj treść notatki" })
    </div>

    <button type="submit" class="btn btn-default">Zapisz</button>
</form>